{
  "name": "oorja",
  "version": "1.0.0",
  "description": "oorja is a quick to use video/voice chat application with realtime collaborative features",
  "scripts": {
    "start": "meteor run --settings settings-development.json",
    "debug": "meteor run  --settings ./settings-development.json --inspect-brk=3002",
    "lint": "eslint .",
    "unit": "jest"
  },
  "devDependencies": {
    "@types/dom4": "^2.0.0",
    "@types/pure-render-decorator": "^0.2.28",
    "@types/react": "^16.1.0",
    "@types/react-dom": "^16.0.4",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-meteor": "^4.2.1",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "regenerator-runtime": "^0.11.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/guide",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "server": false,
      "browser": false,
      "expect": false
    },
    "rules": {
      "new-cap": 0,
      "no-plusplus": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-absolute-path": 0,
      "import/extensions": 0,
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ],
      "class-methods-use-this": 0
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.42",
    "@blueprintjs/core": "^2.0.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "brace": "^0.11.1",
    "bufferutil": "^3.0.3",
    "bugsnag": "^1.12.2",
    "classnames": "^2.2.5",
    "core-js": "^2.5.4",
    "crypto-js": "^3.1.9-1",
    "date-fns": "^1.29.0",
    "debug": "^3.1.0",
    "hark": "^1.2.0",
    "highlight.js": "^9.12.0",
    "http-status-codes": "^1.3.0",
    "immutability-helper": "^2.6.6",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.5",
    "meteor-node-stubs": "^0.3.3",
    "moment": "^2.21.0",
    "phoenix": "^1.3.0",
    "prop-types": "^15.6.1",
    "query-string": "^6.0.0",
    "quill": "^1.3.6",
    "react": "^16.2.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "react-transition-group": "^2.3.0",
    "redux": "^3.7.2",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "remarkable": "^1.7.1",
    "sentencer": "^0.1.5",
    "simple-peer": "^9.0.0",
    "socket.io-client": "^2.0.3",
    "utf-8-validate": "^4.0.0",
    "y-array": "^10.1.4",
    "y-indexeddb": "^8.1.9",
    "y-map": "^10.1.3",
    "y-memory": "^8.0.9",
    "y-richtext": "^9.0.8",
    "y-text": "^9.5.1",
    "yjs": "^12.3.3"
  }
}
